# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=academy_asp
DB_USER=root
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_REFRESH_EXPIRES_IN=30d

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# SMS Configuration (Twilio or local provider)
SMS_PROVIDER=twilio
SMS_API_KEY=your_sms_api_key
SMS_API_SECRET=your_sms_api_secret
SMS_FROM_NUMBER=+1234567890

# SMS Scheduler Configuration
ENABLE_SMS_SCHEDULER=true

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Admin Setup Key (for creating super admin accounts)
ADMIN_SETUP_KEY=ASPIRE-ADMIN-2024-SETUP

# ==============================
# Payment Gateway Configuration
# ==============================
# Provider: 'moyasar' (recommended), 'tap' (alternative), 'mock' (development)
PAYMENT_PROVIDER=mock

# --- Moyasar (Recommended for Saudi Arabia) ---
# Get your keys from: https://moyasar.com/dashboard
# Supports: Mada, STC Pay, Apple Pay, Visa/Mastercard
MOYASAR_SECRET_KEY=sk_test_your_moyasar_secret_key_here
MOYASAR_PUBLISHABLE_KEY=pk_test_your_moyasar_publishable_key_here

# --- Tap Payments (Alternative) ---
# Get your keys from: https://dashboard.tap.company
# Supports: Mada, STC Pay, Apple Pay, Visa/Mastercard
TAP_SECRET_KEY=sk_test_your_tap_secret_key_here
TAP_PUBLISHABLE_KEY=pk_test_your_tap_publishable_key_here

# --- Payment Callback URL ---
# URL where payment gateway redirects after payment completion
PAYMENT_CALLBACK_URL=http://localhost:5173/payment/callback
BACKEND_URL=http://localhost:5000
